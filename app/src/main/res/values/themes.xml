<resources>
    <!-- Base application theme. -->
    <style name="Theme.TagsSelection" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="buttonStyle">@style/primary_material_button</item>
    </style>

    <style name="Theme.TagsSelection.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TagsSelection.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.TagsSelection.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="primary_material_button">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="iconSize">24dp</item>
    </style>
</resources>